<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/view_border_line"/>
    
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/base_pressed"
    android:orientation="horizontal" >
    
    <ImageView 
        android:id="@+id/repair_item_imageview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="center"
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_weight="7"/>
    
    <LinearLayout
        android:id="@+id/detail_repair_textview_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:layout_weight="5"
        android:orientation="vertical">
        
        <TextView 
            android:id="@+id/detail_repair_title_textview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="15sp"
            android:text="管子变成羊驼了要修"/>
        
        <TextView 
            android:id="@+id/detail_repiar_content_textview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:textSize="13sp"
            android:textColor="@color/repair_content_text_color"
            android:text="那你倒是介绍咯。写点儿介绍咯，写点儿咯，写咯，咯。咯！凑凑字数，看看能不能自动换行，凭我长得这么帅，应该自动换行了吧～～"/>
        
    </LinearLayout>
    
    <TextView 
        android:id="@+id/detail_repiar_content_cost_textview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="7"
        android:gravity="center"
        android:text="100元"
        android:textColor="@color/Theme_color"
        android:textSize="18sp"/>
    
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical|right"
        android:src="@android:drawable/ic_menu_slideshow"
        android:layout_weight="8"/>

</LinearLayout>

<View 
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="bottom"
        android:background="@drawable/view_border_line"/>
</LinearLayout>
