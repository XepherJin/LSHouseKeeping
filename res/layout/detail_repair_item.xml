<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <View 
        android:layout_width="fill_parent"
        android:layout_marginTop="5dp"
        android:layout_height="0.5dp"
        android:background="@drawable/view_border_line"/>
    
    <TextView 
            android:id="@+id/detail_repair_title_textview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/main_page_layout_selector"
            android:textColor="#666666"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:gravity="center"
            android:text="项目名称"
            android:textSize="18sp"
            android:ellipsize="end"/>
    
    <View 
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/view_border_line"/>
    
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center"
    android:background="@drawable/main_page_layout_selector"
    android:orientation="horizontal" >
    
    <ImageView 
        android:id="@+id/repair_item_imageview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/demo_icon"
        android:layout_weight="15"/>

        
        <TextView 
            android:id="@+id/detail_repiar_content_textview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:text="项目内容"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:lines="4"
            android:textSize="13sp"
            android:textColor="@color/repair_content_text_color"/>
    
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:src="@drawable/enter_indicator"
        android:scaleType="centerInside"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="18.3"/>

</LinearLayout>

        <com.retropoktan.lshousekeeping.view.PriceTextView
        android:id="@+id/detail_repiar_content_cost_textview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:background="@drawable/main_page_layout_selector"
        android:gravity="center"
        android:text="0元"
        android:textSize="18sp"/>

<View 
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/view_border_line"/>
</LinearLayout>
