<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        
        <ImageView 
            android:id="@+id/order_result_imageview"
            android:layout_width="80dp"
            android:layout_gravity="center"
            android:layout_height="80dp"
            android:src="@drawable/success_label"/>
        
        <TextView 
            android:id="@+id/order_result_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预约成功！"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/Theme_color"
            android:textSize="35sp"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        
        <TextView
            android:id="@+id/order_result_sub_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请尝试"
            android:layout_gravity="center"
            android:textColor="@color/Theme_color"
            android:visibility="gone"
            android:textSize="20dp" />
        
        <Button
            android:id="@+id/order_result_button"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="分享"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/launcher_button_background"
            android:layout_gravity="center"
            android:textColor="@android:color/white"/>
        
    </LinearLayout>

</LinearLayout>
