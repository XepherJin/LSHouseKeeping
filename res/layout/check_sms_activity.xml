<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical" >
    
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="16sp"
        android:gravity="center"
        android:text="此号码第一次在本机中使用\n需要进行短信验证！"/>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">
        
        <EditText
            android:id="@+id/edittext_for_sms"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:background="@drawable/setting_button_unpressed"
            android:hint="请输入验证码" />
        
        <Button 
            android:id="@+id/send_sms_verify_button"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:text="验证"
            android:textSize="18.5dp"
            android:textColor="@android:color/white"
            android:background="@drawable/launcher_button_background"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"/>
        
        <Button 
            android:id="@+id/resend_button"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:text="重新发送"
            android:textSize="18.5dp"
            android:textColor="@android:color/white"
            android:background="@drawable/launcher_button_background"
            android:layout_marginLeft="5dp"
            android:layout_weight="2"/>
        
    </LinearLayout>
    
</LinearLayout>
