<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_weight="2"
        android:layout_height="fill_parent">
        
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="请填写预约表，我们将在10分钟内与您联系，谢谢！"
        android:gravity="center"
        android:textColor="#666666"
        android:textSize="13sp"/>
        
    </ScrollView>
    
    <LinearLayout
        android:id="@+id/submit_layout"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_height="120dp">
        
        <View 
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/view_border_line"/>
        <TextView
            android:id="@+id/total_price_textview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="总价： 0 元"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            android:gravity="right"
            android:layout_marginRight="5dp"
            android:textSize="20sp"/>
        
        <Button 
            android:id="@+id/submit_order_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="确认预约"
            android:textSize="17sp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/white"
            android:background="@drawable/launcher_button_background"/>
        
    </LinearLayout>
</LinearLayout>
